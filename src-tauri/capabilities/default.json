        { "url": "https://api-ap.libreview.io/*" },
        { "url": "https://api-ap.libreview.io/**" },
        { "url": "https://api-au.libreview.io/*" },
        { "url": "https://api-au.libreview.io/**" },
        { "url": "https://api-ae.libreview.io/*" },
